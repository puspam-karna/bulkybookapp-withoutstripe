@model IEnumerable<Catagory>
@{
    ViewData["Title"] = "Index";
}
<div class='container p-3'>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Catagory List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Catagory" asp-action="Create" class="btn btn-primary ">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Catagory</a>
        </div>
    </div>
    <br/><br/>
<table class="table table-bordered table-striped" style="width:100%">
<thead>
    <tr>
        <th>catagory</th>
        <th>display order</th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach( var obj in Model)
        {
            <tr>
                <td width="50%">@obj.Name</td>
                <td width="30%">@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Catagory" asp-action="Edit" asp-route-id="@obj.Id" 
                        class="btn btn-primary "><i class="bi bi-pencil-square"></i>Edit</a>
                          <a asp-controller="Catagory" asp-action="Delete" asp-route-id="@obj.Id" 
                        class="btn btn-danger "><i class="bi bi-thrash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>
</div>
